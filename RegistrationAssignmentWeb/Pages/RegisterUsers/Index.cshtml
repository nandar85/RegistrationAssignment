@page
@model RegistrationAssignmentWeb.Pages.RegisterUsers.IndexModel


<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">List Of Registered Users</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="Create" class="btn btn-primary">
				<i class="bi bi-plus-square"></i> &nbsp;Add User
			</a>
		</div>
	</div>

	<br /><br />

	<table id="tblData" class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					No
				</th>
				<th>
					Name
				</th>
				<th>
					Email
				</th>
				<th>
					Gender
				</th>
				<th>
					Date Reg
				</th>
				<th>
					Selected Days
				</th>
				<th>
					Interest Area
				</th>
				<th>Add. Request</th>
			</tr>
		</thead>
		
	</table>

</div>

@section Scripts{
	<script type="text/javascript">
        $(function () {
            $('#tblData tbody tr').each(function (idx) {
               $(this).children("td:eq(0)").html(idx + 1);
           });
            //$('#tblData').DataTable({
            //});
        });
    </script>
	<script src="~/js/registerUserList.js"></script>
}
